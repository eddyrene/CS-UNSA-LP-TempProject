<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".RegisterActivity">

    <!-- Search progress -->
    <ProgressBar
        android:id="@+id/search_progress2"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nombre:"
                    android:id="@+id/textView15" />

                <EditText
                    android:layout_width="298dp"
                    android:maxLines="1"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:maxLength="30"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Precio:"
                    android:id="@+id/textView2" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned|textNoSuggestions|textVisiblePassword"
                    android:digits="0123456789"
                    android:maxLength="5"
                    android:ems="10"
                    android:maxLines="1"
                    android:id="@+id/editText_precio"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Dirección:"
                    android:id="@+id/textView3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:maxLength="30"
                    android:ems="10"
                    android:maxLines="1"
                    android:id="@+id/editText_dirr"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fotos:"
                    android:id="@+id/textView10"
                    android:layout_weight="0.0" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton_imagen"
                    android:background="@mipmap/upload"
                    android:layout_weight="0.0">

                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mapa: "
                    android:id="@+id/textView11"
                    android:layout_weight="0.0" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton_mapa"
                    android:background="@mipmap/mapmarker"
                    android:layout_weight="0.0" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Servicios:"
                android:id="@+id/textView4"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_wifi"
                    android:checked="false"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_wifi"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_mascota"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_animales"
                    android:checked="false" />

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_tv"
                    android:checked="false"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_tv"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_agua"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_agua"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_toilet"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_toilet"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Restricción de género:"
                android:id="@+id/textView9"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_man"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_men"/>

                <ToggleButton
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton_woman"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/pressbutton_woman"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Telefono:"
                    android:id="@+id/textView12" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned|textNoSuggestions|textVisiblePassword"
                    android:digits="0123456789"
                    android:maxLength="9"
                    android:ems="10"
                    android:maxLines="1"
                    android:id="@+id/editText2"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Añadir habitación"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
