            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:layout_width="@dimen/icon_margin2"
                    android:layout_height="@dimen/icon_margin2"
                    android:src="@mipmap/verde_cellphonefilled"
